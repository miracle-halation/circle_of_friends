<div class="container">
	<h3>検索</h3>
	<%= render "search_form", search: @p %>
	<h3>検索結果</h3>
	<br>
	<% if @results.length !=0 %>
		<% @results.each do |result| %>
			<%= link_to circle_path(result) do %>
			<div class="row">
				<%= image_tag result.image, class: "circle-img" if result.image.attached?%>
				<div class="col">
					<%= result.name %>
					<%= result.phrase %>
				</div>
			</div>
			<br>
			<% end %>
		<% end %>
	<% end %>
</div>