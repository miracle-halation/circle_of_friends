<div class='account-page__inner--right user-form'>
	<%= form_with model: circle, local: true do |f| %>
		<%= render "/shared/error_message", model: f.object %>
		<%= f.file_field :image, class: "form_image" %>
		<img class="prev-content" style="width:100px;height:100px;">
		<div class='field'>
			<div class='field-label'>
				<%= f.label :name%>
			</div>
			<div class='field-input'>
				<%= f.text_field :name, autofocus: true%>
			</div>
			<div class='field-label'>
				<%= f.label :phrase %>
			</div>
			<div class='field-input'>
				<%= f.text_field :phrase, autofocus: true%>
			</div>
		</div>
		<div class='field'>
			<div class='field-label'>
				<%= f.label :description %>
			</div>
			<div class='field-input'>
				<%= f.text_area :description, class:"form-control" %>
			</div>
		</div>
		<div class='field'>
			<div class='field-label'>
				<%= f.label :genre_id %>
			</div>
			<div class='field-input'>
				<%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form-control"}) %>
			</div>
			<div class='field-label'>
				<%= f.label :activity %>
			</div>
			<div class='field-input'>
				<%= f.text_field :activity, autofocus: true%>
			</div>
			<div class='field-label'>
				<%= f.label :age_range %>
			</div>
			<div class='field-input'>
				<%= f.text_field :age_range, autofocus: true%>
			</div>
			<div class='field-label'>
				<%= f.label :prefecture_id %>
			</div>
			<div class='field-input'>
				<%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control"}) %>
			</div>
			<div class='field-label'>
				<%= f.label :city %>
			</div>
			<div class='field-input'>
				<%= f.text_field :city, autofocus: true%>
			</div>
			<div class="row">
				<%= f.collection_check_boxes(:user_ids, @users, :id, :nickname) do |b| %>
					<div class="col user_index">
						<%= b.label { b.check_box + b.text } %>
					</div>
				<% end %>
			</div>
		</div>
		<div class='actions'>
			<%= f.submit yield(:send_title), class: 'btn'%>
		</div>
	</div>
<% end %>