<div class="container">
	<div class="row justify-content-md-center">
		<h1 class="display-4">Circle Of Friends</h1>
	</div>
	<h3>検索</h3>
	<%= render "search_form", search: @p%>
	<h3>サークル一覧</h3>
	<div class="d-flex flex-column bd-highlight mb-3">
		<% @circles.each do |circle| %>
		<div class="p-2 bd-highlight circle-list">
			<h4><%= link_to circle.name, circle_path(circle) %></h4>
			<br>
			<div class="circle-index">
				<%= image_tag circle.image, class: "circle-img" if circle.image.attached?%>
				<div class="circle-info">
					<p class="font-weight-bold">
						<%= circle.phrase %>
					</p>
					<span class="d-inline-block text-truncate" style="max-width: 800px;">
						【サークル説明】<%= circle.description %>
					</span>
					<br>
					<p class="font-weight-normal">
						【ジャンル】<%= circle.genre.name %>
					</p>
					<p class="font-weight-normal">
						【年齢層】<%= circle.age_range %>
					</p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<div class="row justify-content-md-center">
		<div class="col-md-3">
			<%= link_to "早速立ち上げる", new_circle_path, class: "btn btn-primary btn-lg active" %>
		</div>
	</div>
	<h3>ジャンル一覧</h3>
	<div class="row">
		<% @genres.each_with_index do |genre, n| %>
			<%= link_to circles_genre_path(genre: genre) do %>
				<div class="genre-images">
					<%= image_tag "genres/image#{n+1}.jpg", class:"circle-img" %>
					<p><%= genre.name %></p>
				</div>
			<% end %>
		<% end %>
	</div>
</div>