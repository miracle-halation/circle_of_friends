<div class="container">
	<%= render "circles/circle_head", circle: @circle %>
	<%= form_with model: @article do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class:"form-control", id:"exampleFormControlInput1", placeholder:"タイトルを入力してください" %>
		</div>
		<div class="form-group">
			<%= f.label :content %>
			<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
		</div>
		<div class="form-group">
			<%= f.submit "送信", class:"btn btn-success" %>
		</div>
	<% end %>
</div>