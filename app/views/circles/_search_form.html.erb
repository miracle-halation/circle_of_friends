<div class="row row-cols-4">
	<%= search_form_for search, url: circles_search_path, class:"form-row" do |f| %>
		<%= f.label :name_or_phrase_or_description_or_activity_or_age_range_or_city_cont, "サークル名" %>
		<%= f.text_field :name_or_phrase_or_description_or_activity_or_age_range_or_city_cont, class:"form-control mb-2"%>
		<div class="col">
			<%= f.label :genre_id_eq, "ジャンル" %>
			<%= f.collection_select(:genre_id_eq, Genre.all, :id, :name, {include_blank: '指定なし' }, {class:"form-control"}) %>
		</div>
		<div class="col">
			<%= f.label :prefecture_id_eq, "都道府県" %>
			<%= f.collection_select(:prefecture_id_eq, Prefecture.all, :id, :name, {include_blank: '指定なし' }, {class:"form-control"}) %>
		</div>
		<%= f.submit '検索', class:"search-btn" %>
	<% end %>
</div>