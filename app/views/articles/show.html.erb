<div class="container">
  <div class="jumbotron">
		<h1 class="display-4"><%= @article.title %></h1>
		<%= image_tag @article.image, class:"article-img" if @article.image.present? %>
		<hr class="my-4">
		<%= link_to "編集", edit_circle_article_path(@circle, @article), class:"btn btn-primary" %>
	</div>
	<div class="row justify-content-md-center">
		<%= @article.content %>
	</div>
	<div class="row justify-content-md-center">
		<%= link_to "戻る", circle_path(@circle), class:"btn btn-primary" %>
	</div>
</div>