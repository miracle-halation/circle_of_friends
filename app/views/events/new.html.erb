<div class="container">
	<div class="jumbotron">
		<h1 class="display-4">新規イベント作成</h1>
	</div>
	<%= form_with model: @event, url:circle_events_path(@circle,@event)  do |f|%>
		<div class="form-group">
			<%= f.label :title%>
			<%= f.text_field :title, class:"form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :start_time%>
			<%= f.date_field :start_time%>
		</div>
		<div class="form-group">
			<%= f.label :end_time %>
			<%= f.date_field :end_time %>
		</div>
		<div class="form-group">
			<%= f.label :body%>
			<%= f.text_area :body, class:"form-control content"%>
		</div>
		<%= f.hidden_field :user_ids, value: current_user.id%>
		<div class="form-group">
			<%= f.submit "作成", class:"btn btn-success" %>
		</div>
	<% end %>
</div>