<div class="container">
	<div class="jumbotron">
		<h1 class="display-4"><%= @event.title %></h1>
		<hr class="my-4">
		<%= link_to "編集", edit_circle_event_path(@circle, @event), class: "btn btn-primary btn-lg" %>
		<%= link_to "出席", "#", class: "btn btn-info btn-lg" %>
	</div>
	<div class="row justify-content-md-center">
		<div class="col-md-auto">
			<h2>詳細</h2>
    </div>
  </div>
	<div class="row">
		<%= @event.body%>
	</div>
	<br>
	<ul class="list-group">
		<h2>参加者</h2>
		<% @users.each do |user| %>
  		<li class="list-group-item"><%= user.nickname %></li>
		<% end %>
	</ul>
</div>