<div class="container">
	<div class="jumbotron">
		<h1 class="display-4"><%= yield(:page_title) %></h1>
	</div>
	<%= form_with model: [circle,event] do |f|%>
		<div class="form-group">
			<%= f.label :title%>
			<%= f.text_field :title, class:"form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :start_time%>
			<%= f.date_field :start_time%>
		</div>
		<div class="form-group">
			<%= f.label :end_time %>
			<%= f.date_field :end_time %>
		</div>
		<div class="form-group">
			<%= f.label :body%>
			<%= f.text_area :body, class:"form-control content"%>
		</div>
		<div class="form-group">
			<%= f.submit yield(:send_title), class:"btn btn-success" %>
		</div>
	<% end %>
</div>